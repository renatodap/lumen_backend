# Server Configuration
GIN_MODE=release
APP_PORT=8080
APP_NAME=lumen-backend

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://postgres.[password]@db.[project-ref].supabase.co:5432/postgres

# JWT Configuration
JWT_SECRET=your-secure-jwt-secret-here-minimum-32-characters
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key-here
SUPABASE_JWT_SECRET=your-jwt-secret-from-supabase-settings

# CORS Configuration (Production URLs)
CORS_ALLOWED_ORIGINS=https://lumen-frontend-theta.vercel.app,https://lumen-frontend-git-main-renatodaps-projects.vercel.app
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Authorization

# Optional: Redis (if needed for caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60s
RATE_LIMIT_ENABLED=true

# Feature Flags
ENABLE_ANALYTICS=false
ENABLE_DEBUG=false
ENABLE_PROFILING=false
